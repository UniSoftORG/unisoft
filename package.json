{
  "name": "unisoft",
  "version": "1.0.3",
  "scripts": {
    "dev": "concurrently  \"pnpm dev:utils\" \"pnpm dev:templates\" \"pnpm dev:types\" \"pnpm dev:src\"",
    "dev:src": "cd src && pnpm dev",
    "dev:utils": "cd packages/utils && pnpm watch",
    "dev:templates": "cd packages/templates && pnpm watch",
    "dev:types": "cd packages/@types-unisoft && pnpm watch",
    "build": "cd src && pnpm build",
    "start": "cd src && pnpm start",
    "test": "concurrently  \"pnpm test:utils\"",
    "test:utils": "cd packages/utils && pnpm test",
    "format": "concurrently  \"pnpm format:src\" \"pnpm format:utils\"",
    "format:src": "cd src && pnpm format",
    "format:utils": "cd packages/utils && pnpm format"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@typescript-eslint/eslint-plugin",
        "@typescript-eslint/parser",
        "eslint",
        "typescript",
        "@types/jest",
        "jest",
        "ts-jest",
        "prettier"
      ]
    }
  },
  "resolutions": {
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/uuid": "^9.0.7"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "uuid": "^9.0.1",
    "sass": "^1.69.5"
  },
  "devDependencies": {
    "@types/uuid": "^9.0.7",
    "typescript": "^5.2.2",
    "concurrently": "^8.2.2"
  }
}
